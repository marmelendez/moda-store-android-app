<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topbarConfig"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Account"
        >

        <Button
            android:id="@+id/config_data_btn_return"
            style="@style/returnButton"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/title_Configuration"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_Configuration"
            style="@style/header_title"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_configuration" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_Account"
        style="@style/configButtons"
        android:drawableRight="@drawable/ic_next"
        android:text="@string/menu_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbarConfig" />

    <Button
        android:id="@+id/btn_PaymentMethod"
        style="@style/configButtons"
        android:drawableRight="@drawable/ic_next"
        android:text="@string/menu_payment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Account" />

    <Button
        android:id="@+id/btn_Addresses"
        style="@style/configButtons"
        android:drawableRight="@drawable/ic_next"
        android:text="@string/menu_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_PaymentMethod" />

    <Button
        android:id="@+id/btn_LogOut"
        style="@style/configButtons"
        android:text="@string/menu_logout"
        android:fontFamily = "@font/nunitobold"
        android:textAlignment="center"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Addresses" />

</androidx.constraintlayout.widget.ConstraintLayout>